{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-std=c++17",
                "-Wshadow",
                "-Wno-sign-conversion",
                "-fno-sanitize-recover=undefined", // stops execution
                "-fsanitize=undefined",
                "-D_GLIBCXX_DEBUG",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.e"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run",
            "command": "${fileDirname}/${fileBasenameNoExtension}.e",
            "problemMatcher": [],
            "presentation": {
            "focus": true
            }
        }
    ],
    "version": "2.0.0"
}